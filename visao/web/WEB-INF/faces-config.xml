<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

    <application>
        <resource-bundle>
            <base-name>i18N</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>

    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <description>principal</description>
            <from-outcome>principal</from-outcome>
            <to-view-id>/index.jsf</to-view-id>
        </navigation-case>        
        <navigation-case>
            <description>confirmarHospedagem</description>
            <from-outcome>confirmarHospedagem</from-outcome>
            <to-view-id>/confirmacaoHospedagem.jsf</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <description>sucessoReserva</description>
            <from-outcome>sucessoReserva</from-outcome>
            <to-view-id>/sucessoReserva.jsf</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <description>listarHospedarias</description>
            <from-outcome>listarHospedarias</from-outcome>
            <to-view-id>/listarHospedarias.jsf</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <description>avaliarHospedagem</description>
            <from-outcome>avaliarHospedagem</from-outcome>
            <to-view-id>/avaliarHospedagem.jsf</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <description>consultarReservaHospedaria</description>
            <from-outcome>consultarReservaHospedaria</from-outcome>
            <to-view-id>/consultarReservaHospedaria.jsf</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <description>login</description>
            <from-outcome>login</from-outcome>
            <to-view-id>/login.jsf</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

</faces-config>
